extends ../etendues/base.pug

block variables
    - var erreur = erreur;
    - var session = session;

block contenu
    section#formulaire_inscription
        div.ligne
            form.fiche(method="post")
                h1 Registrierung
                label.input(for="pseudonyme_formulaire_inscription") Nutzername
                    input#pseudonyme_formulaire_inscription(name="pseudonyme", type="text", required)
                label.input(for="adresse_mail_formulaire_inscription") E-Mail-Adresse
                    input#adresse_mail_formulaire_inscription(name="adresse_mail", type="email", required)
                div.ligne
                    label.input(for="mot_de_passe_formulaire_inscription") Passwort
                        input#mot_de_passe_formulaire_inscription(name="mot_de_passe", type="password", required)
                    label.input(for="confirmation_mot_de_passe_formulaire_inscription") Best√§tigung des Passwort
                        input#confirmation_mot_de_passe_formulaire_inscription(name="confirmation_mot_de_passe", type="password", required)
                button(type="submit") Registrierung
            div.fiche
                h1 Ehemaliger Benutzer?
                a.bouton.attirant(href="/compte/connexion") Einloggen