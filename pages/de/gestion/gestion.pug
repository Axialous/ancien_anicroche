extends ../etendues/base.pug

block variables
    - var erreur = erreur;
    - var session = session;

block contenu
    section
        article
            h1 Management
            div.fiche
                div.petit
                    h1 Aktionen
                    div 
                        if ! chapitre.publie
                            div.ligne.mini
                                a.bouton.attirant(href=`/gestion/${chapitre._id}/publication`) Veröffentlichen
                                a.bouton(href=`/ecriture/${chapitre._id}`) Schreiben
                        div.ligne.mini
                            a.bouton.attirant(href=`/gestion/${chapitre._id}/suppression`) Löschen
                            a.bouton(href=`/lecture/${chapitre._id}`)= chapitre.publie ? "Lesen" : "Flüchtiger Blick"
                            a.bouton(href=`/gestion/${chapitre._id}/visibilite`) Sichtbarkeit ändern (!{chapitre.visibilite})
                            a.bouton(href=`/gestion/${chapitre.id}/etiquettes`) Tags verwalten (!{chapitre.etiquettes.length})
                form.petit(method="post")
                    h1 Bearbeiten von Informationen
                    input#titre_redaction(name="titre", type="text", value=`${chapitre.titre}`, placeholder="Titel")
                    textarea#resume_redaction(name="resume", cols="1", rows="1", placeholder="Zusammenfassung")= chapitre.resume
                    button(type="submit") Änderungen speichern