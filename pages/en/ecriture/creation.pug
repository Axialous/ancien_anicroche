extends ../etendues/base.pug

block variables
    - var erreur = erreur;
    - var session = session;

block contenu
    section#formulaire_creation
        form.fiche(method="post")
            h1 Create a new story
            input#titre_formulaire_creation(name="titre", type="text", placeholder="Title", required)
            input#resume_formulaire_creation(name="resume", type="text", placeholder="Summary")
            button(type="submit") Create the story